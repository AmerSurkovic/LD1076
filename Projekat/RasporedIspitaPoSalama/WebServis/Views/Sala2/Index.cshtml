@model IEnumerable<WebServis.Models.Sala>

@{
    ViewBag.Title = "Index";
}

<h2>Sale</h2>

<p>
    @Html.ActionLink("Dodaj novu salu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kapacitet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.naziv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kapacitet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.naziv)
        </td>
        <td>
            @Html.ActionLink("Izmijeni", "Edit", new { id=item.salaID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.salaID }) |
            @Html.ActionLink("Izbrisi", "Delete", new { id=item.salaID })
        </td>
    </tr>
}

</table>
